<launch>
  <arg name="map_file" default="$(find auckbot_navigation)/maps/mudcircle.yaml"/>

  <!-- TF FRAMES -->
  <node pkg="tf" type="static_transform_publisher" name="base_to_camera_tf" 
    args="0.6 0.0 0.39 0.0 0.0 0.0 /base_link /kinect_link 100" />
   
  <!--- kinect -> laser -->
	<node name="depthimage_to_laserscan" pkg="depthimage_to_laserscan" type="depthimage_to_laserscan" > 
    <remap from="image" to="/kinect/depth/image_raw"/>
    <remap from="camera_info" to="/kinect/depth/image_raw"/>
    <param name="output_frame_id" type="string" value="kinect_link"/>
  </node>
    
	<!--- Run map_server -->
	<node name="map_server" pkg="map_server" type="map_server" args="$(arg map_file)"/>

	<!--- Run AMCL -->
	<include file="$(find auckbot_navigation)/launch/amcl_node.xml" />
	
	<!--- Run move base -->
  <node pkg="move_base" type="move_base" respawn="false" name="move_base" output="screen">
    <rosparam file="$(find auckbot_navigation)/param/costmap_common_params.yaml" command="load" ns="global_costmap" />
    <rosparam file="$(find auckbot_navigation)/param/costmap_common_params.yaml" command="load" ns="local_costmap" />
    <rosparam file="$(find auckbot_navigation)/param/local_costmap_params.yaml" command="load" />
    <rosparam file="$(find auckbot_navigation)/param/global_costmap_params.yaml" command="load" />
    <rosparam file="$(find auckbot_navigation)/param/base_local_planner_params.yaml" command="load" />
    <rosparam file="$(find auckbot_navigation)/param/move_base_params.yaml" command="load" />
  </node>

</launch>
